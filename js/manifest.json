{
  "manifest_version": 2,
  "name": "Video Notes Generator",
  "version": "1.0",
  "description": "Generates notes from video URLs",
  "icons": {
    "48": "icon.jpg"
  },
  "permissions": [
    "activeTab",
    "http://127.0.0.1:5000/*",
    "webRequest", 
    "webRequestBlocking",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icon.jpg",
    "default_popup": "popup/popup.html"
  },
  "content_security_policy": "script-src 'self'; connect-src http://127.0.0.1:5000; object-src 'self';"}